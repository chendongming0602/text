.detailsBox{
  /* background-size: 100% 100%; */
  width: 100vw;
  min-height: 100vh;
  padding: 30rpx;
  position: relative;
}
.advertising{
  width: 100%;
  height: 240rpx;
  background: rgb(214, 214, 91);
}
.music{
  width: 68rpx;
  height: 68rpx;
  position: fixed;
  top: 300rpx;
  right: 28rpx;
}
.pic{
  width: 164rpx;
  height: 164rpx;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.picBox{
  margin: 0 auto;
  width: 228rpx;
  position: relative;
}
.picBg{
  width: 100%;
  height: 228rpx;
  position: relative;

}
@keyframes picBgA{
  0%{
    transform: rotate(0);
  }
  100%{
    transform: rotate(360deg);
  }
}
.picBgA{
  animation: picBgA 5s linear infinite;
}